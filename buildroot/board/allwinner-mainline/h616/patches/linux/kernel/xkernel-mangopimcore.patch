+/ {
+	model = "MangoPi Mcore";
+	compatible = "mgcc,mangopi-mcore", "allwinner,sun50i-h616";
+
+	aliases {
+		ethernet0 = &emac0;
+		ethernet1 = &emac1;
+		serial0 = &uart0;
+		serial1 = &uart2;
+		mmc0 =&mmc0;
+		mmc1 =&mmc1;
+	};
