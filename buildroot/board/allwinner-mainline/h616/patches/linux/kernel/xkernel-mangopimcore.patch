+              compatible = "realtek,rtl8723ds-bt";
+              device-wake-gpios = <&pio 6 17 GPIO_ACTIVE_HIGH>; /* PG17 */
+              enable-gpios = <&pio 6 19 GPIO_ACTIVE_HIGH>; /* PG19 */
+              host-wake-gpios = <&pio 6 16 GPIO_ACTIVE_HIGH>; /* PG16 */
