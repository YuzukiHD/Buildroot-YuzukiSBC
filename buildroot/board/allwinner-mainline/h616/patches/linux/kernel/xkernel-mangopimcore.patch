+			rdev = devm_regulator_register(&pdev->dev,
+						       &axp22x_drivevbus_regulator,
+						       &config);
+			break;
+		case AXP803_ID:
+			/* Change N_VBUSEN sense pin to DRIVEVBUS output pin */
