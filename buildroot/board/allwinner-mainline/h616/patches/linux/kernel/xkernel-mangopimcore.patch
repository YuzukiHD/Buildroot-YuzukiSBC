+			opp-microvolt = <820000 820000 1200000>;
+		};
+
+       	opp-792000000 {
+			clock-latency-ns = <244144>; /* 8 32k periods */
+		        opp-hz = /bits/ 64 <792000000>;
+			opp-microvolt = <860000 860000 1200000>;
+		};
+
+		opp-1008000000 {
+			clock-latency-ns = <244144>; /* 8 32k periods */
+			opp-hz = /bits/ 64 <1008000000>;
+			opp-microvolt = <900000 900000 1200000>;
+		};
